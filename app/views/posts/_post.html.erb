<div class="post">
    <div class="post-author">
        <div class="avatar"></div>
        <div><%= post.user.username %></div>
    </div>
    <div class="post-body">
        <span> <%= post.body %> </span>
    </div>
    <div class="post-actions">
        <% if current_user %>
            <% if current_user.likes.find_by(post_id: post.id) %>
                <%= turbo_frame_tag "post-likes-#{post.id}" do %>
                    <%= button_to "", post_likes_path(post), class: "post-actions-unlike", method: :delete %>
                <% end %>
            <% else %>
                 <%= turbo_frame_tag "post-likes-#{post.id}" do %>
                    <%= button_to "", post_likes_path(post), class: "post-actions-like" %>
                <% end %>
            <% end %>
        <% end %>
        <div class="post-actions-comments" id="post-comments-count-<%=post.id%>" > <%= pluralize(post.comments.count, "comment") %> </div>
    </div>
    <div class="post-comments">
        <div id="comment-form-<%=post.id%>"> <%= render partial: "comments/form", locals: { post: post } %> </div>
        <div id="post-comments-list-<%=post.id%>">
            <%= render partial: "comments/list", locals: { post: post } %>
        </div>
    </div>
</div>